    transparent
  }
}

{$CADDY_URL}:9095 {
  tls {$CADDY_TLS}
  errors stderr

  basicauth / {$ADMIN_USER} {$ADMIN_PASSWORD}
  proxy / alertmanagerB:9093 {
    transparent
  }
}

# swarmstack_net access to Caddy Prometheus metrics
:9180 {
  tls off
  errors stderr

  prometheus {
    use_caddy_addr
  }
}

